
colorbody= #FEFDFD
colorheader=#E5E5E5
colorfooter=#3BBAB5
negro=#383838

body
	text-align center
	margin 0px

	.caja_header
		position: absolute;
		width 100%
		height 70px
		margin-top 20px
		background #E5E5E5

	.principal
		text-align left
		margin auto 
		width 80%
		height 100%
		position relative
	
		header
			
			position relative
			width 85%
			height 100px
			margin auto
			margin-top 80px
			text-align left

			.logo
				float left
				width 100px
				height 100px
				transition transform 1s

			.logo:hover
				transform scale(1.2,1.2)		

			
			.titulos
				position absolute
				left 90px
				top 20px

				h1
					display inline
					margin 0px
					padding 0px
					font-size 40px
					color #33958F
					text-shadow: 2px 2px 5px rgba(173,213,170,0.5)
					
				h2
					position absolute
					top 38px
					margin:0px;
					padding:0px;
					padding-left 20px
					font-size 23px
					color negro
					letter-spacing: 0px;
					text-shadow: 2px 2px 5px rgba(0,0,0,0.3);
					
			nav
				float right
				margin-top 20px
				margin-right 0px
				padding 0px
				
				ul
					text-align center
					padding 0px
					
					li
						display inline
						font-size 25px
						margin-right 10px
						margin-left 10px
						
						a
							text-decoration none
							color negro
							transition transform 1s

						a:hover
							color #33958F
							transform scale(1.2,1.2)

		section
		
			.index
		
				.caja_body_index
			margin auto
			margin-top 0
			width 80%
			height 100%
			background orange
			position relative

		footer
		background colorfooter
		
		.caja_footer_index
			margin auto
			height 100%
			width 70%
			background blue
			position relative
			background yellow


		
